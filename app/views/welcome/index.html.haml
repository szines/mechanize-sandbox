  = nested_li(@categories) do |c|
    =c.name


.well
  %h4 Select box with tree hierarchy
  %form.form-horizontal
    .form-group
      =select_tag "categories", options_from_collection_for_select(@categories, "id", "name"), class: 'form-control'
